<h1 class="title">
    Create New Post
  </h1>

  <form method="POST" action="/posts">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input
          class="input"
          type="text"
          name="title"
          placeholder="Post title..."
        />
      </div>
    </div>

    <div class="field">
      <label class="label">Subtitle</label>
      <div class="control">
        <input
          class="input"
          type="text"
          name="subtitle"
          placeholder="Post subtitle..."
        />
      </div>
    </div>

    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea
          class="textarea"
          name="content"
          placeholder="Post content..."
        ></textarea>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="checkbox">
          <input type="checkbox" name="comments_enabled" checked />
          Enable Comments
        </label>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <input type="submit" value="Submit" class="button is-primary" />
      </div>
      <div class="control">
        <a href="/posts" class="button is-link">Cancel</a>
      </div>
    </div>
  </form>
